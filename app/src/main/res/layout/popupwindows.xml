<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_dialog"
        android:padding="12dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv1"
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:layout_constraintBottom_toBottomOf="@id/tv_new_tab"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_new_tab" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_new_tab"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:gravity="center|start"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:text="Open new tab"
            android:textColor="#585858"
            android:textSize="13sp"
            app:layout_constraintLeft_toRightOf="@id/iv1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv2"
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:layout_constraintBottom_toBottomOf="@id/tv_new_tab"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_new_tab" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_incognito_mode"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:gravity="center|start"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:text="Open in incognito mode"
            android:textColor="#585858"
            android:textSize="13sp"
            app:layout_constraintLeft_toRightOf="@id/iv1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_new_tab" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv3"
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:layout_constraintBottom_toBottomOf="@id/tv_new_tab"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_new_tab" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_copy_link"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:gravity="center|start"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:text="Copy Link"
            android:textColor="#585858"
            android:textSize="13sp"
            app:layout_constraintLeft_toRightOf="@id/iv1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_incognito_mode" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv4"
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:layout_constraintBottom_toBottomOf="@id/tv_new_tab"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_new_tab" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_share"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:gravity="center|start"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:text="Share"
            android:textColor="#585858"
            android:textSize="13sp"
            app:layout_constraintLeft_toRightOf="@id/iv1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_copy_link" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>